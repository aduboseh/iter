{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iter.nodetic.ai/mcp/v0.3/mcp_node_state.schema.json",
  "title": "McpNodeState",
  "description": "Sanitized node state for MCP responses. Exposes only belief and validity, not internal substrate state.",
  "type": "object",
  "required": ["id", "belief", "energy", "esv_valid", "stability"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0,
      "description": "Node identifier (numeric u64)"
    },
    "belief": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Current belief value, contractually in [0.0, 1.0]"
    },
    "energy": {
      "type": "number",
      "minimum": 0.0,
      "description": "Energy level (summarized from substrate mirror_energy)"
    },
    "esv_valid": {
      "type": "boolean",
      "description": "ESV compliance status (true if node passes energy/stability checks)"
    },
    "stability": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Stability indicator from substrate"
    }
  },
  "additionalProperties": false
}
