{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iter.nodetic.ai/mcp/v0.3/mcp_node_state.schema.json",
  "title": "McpNodeState",
  "description": "Node state for MCP responses.",
  "type": "object",
  "required": ["id", "belief", "energy", "esv_valid", "stability"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0,
      "description": "Node identifier (numeric u64)"
    },
    "belief": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Current belief value, contractually in [0.0, 1.0]"
    },
    "energy": {
      "type": "number",
      "minimum": 0.0,
      "description": "Energy level (summary)"
    },
    "esv_valid": {
      "type": "boolean",
      "description": "Compliance status"
    },
    "stability": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Stability indicator (summary)"
    }
  },
  "additionalProperties": false
}
