{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://iter.nodetic.ai/mcp/v0.3/mcp_lineage_entry.schema.json",
  "title": "McpLineageEntry",
  "description": "Lineage entry for MCP responses.",
  "type": "object",
  "required": ["sequence", "operation", "checksum", "tick"],
  "properties": {
    "sequence": {
      "type": "integer",
      "minimum": 0,
      "description": "Entry sequence number"
    },
    "operation": {
      "type": "string",
      "enum": ["tick", "decision", "ethics", "energy"],
      "description": "Operation type"
    },
    "checksum": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 checksum (64 hex characters)"
    },
    "tick": {
      "type": "integer",
      "minimum": 0,
      "description": "Simulation tick when event was recorded"
    }
  },
  "additionalProperties": false
}
